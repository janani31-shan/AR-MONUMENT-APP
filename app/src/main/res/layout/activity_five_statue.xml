<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:scrollbars="horizontal"
tools:context=".five_statue"
tools:ignore="ScrollViewCount">
<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/relay"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/fib"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/content_background_azure">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/akaya_telivigala"
            android:text="Statues"
            android:textColor="@color/white"
            android:textSize="40dp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/fib"
        android:id="@+id/scrollsw"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/fib"
            android:layout_height="match_parent">
            <GridLayout
                android:layout_width="wrap_content"
                android:id="@+id/gridview"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/content_background_statue"
                    android:padding="15dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/fib1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/statueofunity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akaya_telivigala"
                        android:text="Statue of unity"
                        android:textColor="@color/black"
                        android:textSize="20dp"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/content_background_statue"
                    android:padding="15dp"
                    android:id="@+id/fib2"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/fib1"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/greatbuddha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/akaya_telivigala"
                        android:text="The Great Buddha"
                        android:textColor="@color/black"
                        android:textSize="20dp"></TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/content_background_statue"
                    android:padding="15dp"
                    android:id="@+id/fib3"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/fib2"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/adiyogi"
                        android:textColor="@color/black"
                        android:fontFamily="@font/akaya_telivigala"
                        android:textSize="20dp"
                        android:text="Adiyogi Shiva">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/content_background_statue"
                    android:padding="15dp"
                    android:id="@+id/fib4"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/fib3"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ataltunnel"
                        android:textColor="@color/black"
                        android:fontFamily="@font/akaya_telivigala"
                        android:textSize="20dp"
                        android:text="Atal Tunnel">
                    </TextView>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:background="@drawable/content_background_statue"
                    android:padding="15dp"
                    android:id="@+id/fib5"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/fib4"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ashokpillar"
                        android:textColor="@color/black"
                        android:fontFamily="@font/akaya_telivigala"
                        android:textSize="20dp"
                        android:text="Ashoka pillar">
                    </TextView>
                </RelativeLayout>
            </GridLayout>


        </RelativeLayout>


    </HorizontalScrollView>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_below="@id/scrollsw"
        android:layout_height="wrap_content">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@id/scrollsw"
            android:justificationMode="inter_word"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/content_text"
            android:fontFamily="@font/mclaren"
            android:text="">
        </TextView>
    </ScrollView>
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btnarc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AR"
        tools:ignore="NotSibling"></Button>
</RelativeLayout>

</RelativeLayout>
